<?xml version="1.0" encoding="UTF-8"?>
<Mediathek>
<Programmgruppe><Name>Mac Abspielen</Name><Abspielen>true</Abspielen><Speichern>false</Speichern><Button>true</Button><Abo>false</Abo><max-Laenge>25</max-Laenge></Programmgruppe>
<Programm><Programmname>Abspielen Vlc</Programmname><Programmpfad>PFAD_VLC</Programmpfad><Programmschalter>%f --tcp-caching 30000 --play-and-exit</Programmschalter></Programm>

<Programmgruppe><Name>Mac Speichern</Name><Praefix>http</Praefix><Suffix>mp4,mp3,m4v,flv</Suffix><Zielpfad>ZIELPFAD</Zielpfad><Zieldateiname>%t-%T-%N.mp4</Zieldateiname><Abspielen>false</Abspielen><Speichern>true</Speichern><Button>true</Button><Abo>true</Abo><max-Laenge>25</max-Laenge></Programmgruppe>
<Programm><Programmname>flvstreamer</Programmname><Programmpfad>PFAD_FLVSTREAMER</Programmpfad><Programmschalter>-r %f --resume -o **</Programmschalter><Praefix>rtmp</Praefix><Restart>true</Restart></Programm>
<Programm><Programmname>Aufzeichnen Vlc</Programmname><Programmpfad>PFAD_VLC</Programmpfad><Programmschalter>%f :sout=#standard{access=file,mux=asf,dst=**} -I dummy --play-and-exit</Programmschalter></Programm>
</Mediathek>