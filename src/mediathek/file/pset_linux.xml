<Mediathek>
	<Programmset>
		<Name>Linux Abspielen</Name>
		<Abspielen>true</Abspielen>
		<Speichern>false</Speichern>
		<Button>true</Button>
		<Abo>false</Abo>
		<max-Laenge>25</max-Laenge>
		<Beschreibung>Standardset zum direkten Abspielen der Filme</Beschreibung>
	</Programmset>

<Programm><Programmname>skript</Programmname><Programmpfad>PFAD_SCRIPT</Programmpfad><Programmschalter>PFAD_FLVSTREAMER PFAD_VLC -r %f</Programmschalter><Praefix>rtmp://arte</Praefix><Restart>false</Restart></Programm>

<Programm><Programmname>skript</Programmname><Programmpfad>PFAD_SCRIPT</Programmpfad><Programmschalter>PFAD_FLVSTREAMER PFAD_VLC %F</Programmschalter><Praefix>rtmp</Praefix><Restart>false</Restart></Programm>

<Programm><Programmname>Vlc</Programmname><Programmpfad>PFAD_VLC</Programmpfad><Programmschalter>%f --play-and-exit</Programmschalter></Programm>



<Programmset>
	<Name>Linux Speichern</Name><Praefix>http</Praefix><Suffix>mp4,mp3,m4v,flv</Suffix><Zielpfad>ZIELPFAD</Zielpfad><Zieldateiname>%t-%T-%N.mp4</Zieldateiname><Abspielen>false</Abspielen><Speichern>true</Speichern><Button>true</Button><Abo>true</Abo><max-Laenge>25</max-Laenge>
	<Beschreibung>Standardset zum Speichern der Filme</Beschreibung>
</Programmset>

<Programm><Programmname>flvstreamer</Programmname><Programmpfad>PFAD_FLVSTREAMER</Programmpfad><Programmschalter>-r %f --resume -o **</Programmschalter><Praefix>rtmp://arte</Praefix><Restart>true</Restart></Programm>
<Programm><Programmname>flvstreamer</Programmname><Programmpfad>PFAD_FLVSTREAMER</Programmpfad><Programmschalter>%F --resume -o **</Programmschalter><Praefix>rtmp</Praefix><Restart>true</Restart></Programm>

<Programm><Programmname>Vlc</Programmname><Programmpfad>PFAD_VLC</Programmpfad><Programmschalter>%f :sout=#standard{access=file,mux=asf,dst=**} -I dummy --play-and-exit</Programmschalter></Programm>

</Mediathek>